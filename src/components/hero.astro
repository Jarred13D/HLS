import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Hampton Lawn Solutions logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl text-white-700 font-bold lg:tracking-tight xl:tracking-tighter">
      Fresh Cuts, Cleaner Yards, <span class="text-green-600"
        >Happier Homes.</span
      >
    </h1>
    <p class="text-lg mt-4 text-stone-300 max-w-xl">
